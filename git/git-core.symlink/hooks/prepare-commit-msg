#!/usr/bin/env bash

# First run git-secrets hook if it exists
if command -v git-secrets &> /dev/null; then
  git secrets --prepare_commit_msg_hook -- "$@"
fi

# Run our custom LLM commit message generator but suppress ALL output
"${HOME}/.git-core/hooks/prepare-commit-msg-llm" "$@" > /dev/null 2>&1
